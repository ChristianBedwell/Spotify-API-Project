<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/LightTheme">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar">
        </include>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingBottom="10dp"
        tools:context="com.example.spotifyauthentication.Activities.TrackDetailActivity"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/track_detail_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/track_detail_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/track_detail_image"
            android:layout_alignEnd="@+id/track_detail_image"
            android:layout_alignTop="@+id/track_detail_image"
            android:layout_alignBottom="@+id/track_detail_image"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:fontFamily="@font/lato"
            android:textSize="84sp"
            android:shadowColor="@android:color/black"
            android:text="@string/track_item_number_placeholder"
            android:background="@drawable/scrim"/>

        <RelativeLayout
            android:id="@+id/track_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/track_detail_image"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/track_detail_name"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="@string/track_name_placeholder"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:alpha=".87"/>

            <TextView
                android:id="@+id/track_detail_artist"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/track_detail_name"
                android:text="@string/track_artist_placeholder"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:alpha=".60"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/track_detail_info"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/timeStampStart"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:text="@string/seekBarTimeStamp"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:alpha=".60"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="425dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/timeStampStart"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/timeStampEnd"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/seekBar"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="@string/seekBarTimeStamp"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:alpha=".60"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/playback_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/timeSeekBar">

            <Button
                android:id="@+id/favorite_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_favorite_black"
                android:layout_marginEnd="70dp"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/skip_previous_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@+id/favorite_button"
                android:background="@drawable/ic_skip_previous_black_enabled"
                android:layout_centerVertical="true"/>

            <ToggleButton
                android:id="@+id/play_button"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_toEndOf="@+id/skip_previous_button"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_toggle"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textOff=""
                android:textOn=""/>

            <Button
                android:id="@+id/skip_next_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@+id/play_button"
                android:layout_marginEnd="70dp"
                android:background="@drawable/ic_skip_next_black_enabled"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/repeat_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/skip_next_button"
                android:background="@drawable/ic_repeat_black"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>