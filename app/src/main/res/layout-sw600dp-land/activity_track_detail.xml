<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/LightTheme">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar">
        </include>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        tools:context="com.example.spotifyauthentication.Activities.TrackDetailActivity"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/track_detail_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:id="@+id/track_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/track_detail_image"
            android:layout_alignTop="@+id/track_detail_image"
            android:layout_alignBottom="@+id/track_detail_image"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/track_detail_name"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true"
                android:text="@string/track_name_placeholder"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:alpha=".87"/>

            <TextView
                android:id="@+id/track_detail_year"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/track_detail_name"
                android:layout_marginBottom="5dp"
                android:layout_alignStart="@+id/track_detail_name"
                android:text="@string/track_year_placeholder"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:alpha=".60"/>

            <TextView
                android:id="@+id/track_detail_artist"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/track_detail_year"
                android:layout_alignStart="@+id/track_detail_year"
                android:text="@string/track_artist_placeholder"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:alpha=".60"/>

            <TextView
                android:id="@+id/track_detail_popularity_number"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/track_detail_year"
                android:layout_alignBottom="@+id/track_detail_year"
                android:layout_alignEnd="@+id/track_detail_year"
                android:layout_alignParentEnd="true"
                android:text="@string/popularity_number_placeholder"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:alpha=".60"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignTop="@+id/track_detail_artist"
                android:layout_alignBottom="@+id/track_detail_artist"
                android:layout_alignParentEnd="true">

                <RatingBar
                    android:id="@+id/track_detail_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="?android:attr/ratingBarStyleSmall"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/track_detail_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/track_detail_image"
            android:layout_alignEnd="@+id/track_detail_image"
            android:layout_alignTop="@+id/track_detail_image"
            android:layout_alignBottom="@+id/track_detail_image"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:fontFamily="@font/lato"
            android:textSize="36sp"
            android:shadowColor="@android:color/black"
            android:text="@string/track_item_number_placeholder"
            android:background="@drawable/scrim"/>

        <View
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/track_detail_info"
            android:layout_marginTop="15dp"
            android:background="#D3D3D3"/>

        <RelativeLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/line_separator">

            <Button
                android:id="@+id/play_button"
                android:layout_width="175dp"
                android:layout_height="55dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/green_rounded_button"
                android:drawableStart="@drawable/ic_listen"
                android:paddingStart="31dp"
                android:paddingEnd="31dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="@string/listen_button"/>

            <Button
                android:id="@+id/share_button"
                android:layout_width="175dp"
                android:layout_height="55dp"
                android:layout_toEndOf="@+id/play_button"
                android:layout_alignParentEnd="true"
                android:background="@drawable/white_rounded_button"
                android:drawableStart="@drawable/ic_share"
                android:paddingStart="31dp"
                android:paddingEnd="31dp"
                android:gravity="center"
                android:textColor="#656565"
                android:textSize="20sp"
                android:text="@string/share_button"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>