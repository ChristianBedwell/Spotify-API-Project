<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FAFAFA"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/track_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/track_name_placeholder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/track_picture"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/track_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/track_artist_placeholder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toRightOf="@+id/track_picture"
            android:layout_below="@+id/track_name"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignRight="@+id/track_name"
            android:layout_alignTop="@+id/track_artist"
            android:layout_alignBottom="@+id/track_artist"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/green_rounded_button"
                android:text="@string/play_button"/>

            <Button
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:background="@drawable/black_rounded_button"
                android:text="@string/share_button"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

