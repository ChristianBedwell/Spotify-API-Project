<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.spotifyauthentication.Activities.TrackDetailActivity">

        <ImageView
            android:id="@+id/track_detail_image"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/track_detail_name"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_detail_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="@string/track_name_placeholder"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:id="@+id/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_detail_name"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/track_detail_artist"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/track_artist_placeholder"
                android:textColor="?android:textColorSecondary"/>

            <TextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_alignTop="@+id/track_detail_artist"
                android:layout_alignBottom="@+id/track_detail_artist"
                android:layout_toEndOf="@+id/track_detail_artist"
                android:text="|"/>

            <TextView
                android:id="@+id/track_detail_year"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/separator"
                android:layout_alignBottom="@+id/separator"
                android:layout_toEndOf="@+id/separator"
                android:text="@string/track_year_placeholder"
                android:textColor="?android:textColorSecondary" />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/secondary_text"
            android:background="#D3D3D3"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/track_detail_image"
            android:layout_alignEnd="@+id/track_detail_image"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/line">

            <Button
                android:id="@+id/play_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/green_rounded_button"
                android:textColor="#FFFFFF"
                android:text="@string/play_button"/>

            <Button
                android:id="@+id/share_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/play_button"
                android:layout_alignParentEnd="true"
                android:background="@drawable/black_rounded_button"
                android:textColor="#656565"
                android:text="@string/share_button" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>