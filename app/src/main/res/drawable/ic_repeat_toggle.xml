<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- item is not checked, so track has not been set to repeat -->
    <item android:state_checked="false"
        android:drawable="@drawable/ic_repeat_black_disabled" />

    <!-- item is checked, so track has been set to repeat -->
    <item android:state_checked="true"
        android:drawable="@drawable/ic_repeat_green_enabled" />
</selector>